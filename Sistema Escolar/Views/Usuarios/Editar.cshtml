@model SistemaEscolar.DTOs.Usuarios.UsuarioUpdateDTO
@{ ViewBag.Title = "Editar Usuario"; Layout = "/Views/Shared/_Layout.cshtml"; var roles = ViewBag.Roles as IEnumerable<SistemaEscolar.Models.Rol>; }
<h2>Editar Usuario</h2>
<form method="post">
 <input type="hidden" asp-for="Id" />
 <div class="row">
 <div class="col-md-6 mb-2">
 <label class="form-label">Nombre</label>
 <input asp-for="Nombre" class="form-control" />
 <span asp-validation-for="Nombre" class="text-danger"></span>
 </div>
 <div class="col-md-6 mb-2">
 <label class="form-label">Apellidos</label>
 <input asp-for="Apellidos" class="form-control" />
 <span asp-validation-for="Apellidos" class="text-danger"></span>
 </div>
 </div>
 <div class="row">
 <div class="col-md-6 mb-2">
 <label class="form-label">Email</label>
 <input asp-for="Email" class="form-control" />
 <span asp-validation-for="Email" class="text-danger"></span>
 </div>
 <div class="col-md-6 mb-2">
 <label class="form-label">Identificación</label>
 <input asp-for="Identificacion" class="form-control" />
 <span asp-validation-for="Identificacion" class="text-danger"></span>
 </div>
 </div>
 <div class="mb-2">
 <label class="form-label">Roles</label>
 <div class="row">
 @foreach(var r in roles){
 var checkedAttr = Model.RolesIds.Contains(r.Id) ? "checked" : string.Empty;
 <div class="col-md-4">
 <div class="form-check">
 <input class="form-check-input" type="checkbox" name="RolesIds" value="@r.Id" id="rol_@r.Id" @checkedAttr />
 <label class="form-check-label" for="rol_@r.Id">@r.Nombre</label>
 </div>
 </div>
 }
 </div>
 </div>
 <button class="btn btn-primary">Guardar</button>
 <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
<form method="post" asp-action="Eliminar" asp-route-id="@Model.Id" onsubmit="return confirm('¿Eliminar usuario?');" class="mt-3">
 <button class="btn btn-danger">Eliminar Usuario</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial" />}
