@model SistemaEscolar.DTOs.Usuarios.RolUpdateDTO
@{ 
    ViewBag.Title = "Editar Rol"; 
    Layout = "/Views/Shared/_Layout.cshtml"; 
    var permisos = ViewBag.Permisos as IEnumerable<SistemaEscolar.Models.Permiso>; 
}
<h2>Editar Rol</h2>
<form method="post" action="/Seguridad/Roles/editar/@Model.Id">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" name="Nombre" value="@Model.Nombre" />
    </div>
    <div class="mb-3">
        <label class="form-label">Permisos</label>
        <div class="mb-2">
            <a class="btn btn-sm btn-secondary" href="/Seguridad/RolPermisos/@Model.Id">Editar permisos del rol</a>
            <a class="btn btn-sm btn-outline-primary" href="/Seguridad/Permisos/crear">Crear permiso</a>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a class="btn btn-link" href="/Seguridad/Roles">Volver</a>
</form>
<form method="post" asp-action="Eliminar" asp-route-id="@Model.Id" onsubmit="return confirm('¿Eliminar rol?');" class="mt-3">
    <button class="btn btn-danger">Eliminar Rol</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial" />}
