<!DOCTYPE html>
<html lang="es">
<head>
 <meta charset="utf-8" />
 <title>@ViewBag.Title - Sistema Escolar</title>
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
 <div class="container-fluid">
 <a class="navbar-brand" href="/">Sistema Escolar</a>
 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
 <span class="navbar-toggler-icon"></span>
 </button>
 <div class="collapse navbar-collapse" id="nav">
 @if (User?.Identity?.IsAuthenticated ?? false)
 {
 <ul class="navbar-nav me-auto mb-2 mb-lg-0">
 <li class="nav-item"><a class="nav-link" href="/Cursos">Cursos</a></li>
 <li class="nav-item"><a class="nav-link" href="/Historial">Historial</a></li>
 @if (User.HasClaim("permiso","Usuarios.Gestion")) {<li class="nav-item"><a class="nav-link" href="/Usuarios">Usuarios</a></li>}
 @if (User.HasClaim("permiso","Bitacora.Ver")) {<li class="nav-item"><a class="nav-link" href="/Bitacora">Bitácora</a></li>}
 @if (User.HasClaim("permiso","Seguridad.Gestion")) {<li class="nav-item"><a class="nav-link" href="/Seguridad/Roles">Seguridad</a></li>}
 </ul>
 <ul class="navbar-nav">
 <li class="nav-item"><span class="navbar-text me-2">@User.Identity!.Name</span></li>
 <li class="nav-item"><a class="nav-link" href="/Auth/Logout">Logout</a></li>
 </ul>
 }
 else
 {
 <ul class="navbar-nav ms-auto">
 <li class="nav-item"><a class="nav-link" href="/Auth/Login">Login</a></li>
 </ul>
 }
 </div>
 </div>
 </nav>
 <div class="container">
 @RenderBody()
 </div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
 @RenderSection("Scripts", false)
</body>
</html>
